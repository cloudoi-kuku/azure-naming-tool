# Azure Naming Tool Environment Configuration
# Copy this file to .env and modify the values as needed

# Database Configuration
ConnectionStrings__DefaultConnection=Data Source=/app/data/azurenamingtool.db
StorageSettings__UseDatabase=true
StorageSettings__EnableMigration=true

# Application Configuration
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_HTTP_PORTS=8080
ASPNETCORE_HTTPS_PORTS=8081

# Security Configuration (Optional - will be generated if not provided)
# SALTKey=your-salt-key-here
# AdminPassword=your-admin-password-here
# APIKey=your-api-key-here
# ReadOnlyAPIKey=your-readonly-api-key-here
# NameGenerationAPIKey=your-name-generation-api-key-here

# Feature Toggles
DuplicateNamesAllowed=false
ConnectivityCheckEnabled=true
ResourceTypeEditingAllowed=false
AutoIncrementResourceInstance=false
LatestNewsEnabled=false
GeneratedNamesLogEnabled=true
InstructionsEnabled=true
ConfigurationEnabled=true
ReferenceEnabled=true

# Logging Configuration
Logging__LogLevel__Default=Information
Logging__LogLevel__Microsoft.AspNetCore=Warning

# Custom Branding (Optional)
# CustomLogoPath=images/your-logo.png
# CustomToolName=Your Custom Tool Name
# CustomHomeContent=Your custom home page content

# Webhook Configuration (Optional)
# GenerationWebhook=https://your-webhook-url.com/webhook

# Development Mode (Set to false for production)
DevMode=false
